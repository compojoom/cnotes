<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
    <name>COM_@@COMPONENTNAME@@</name>
    <creationDate>@@DATE@@</creationDate>
    <author>compojoom.com</author>
    <authorEmail>services@compojoom.com</authorEmail>
    <authorUrl>https://compojoom.com</authorUrl>
    <license>GNU/GPL</license>
    <version>@@VERSION@@</version>
    <description>Notes component for Joomla!</description>
    <scriptfile>script.php</scriptfile>
    <administration>
        <menu img="../media/com_cnotes/images/icon-16px-cnotes.png">COM_CNOTES</menu>
        <submenu>
            <menu img="../media/com_cnotes/images/icon-16px-cnotes.png" view="lists">COM_CNOTES_NOTES</menu>
            <menu img="../media/com_cnotes/images/live-update.png" view="liveupdate">COM_CNOTES_LIVEUPDATE</menu>
        </submenu>
        <files folder="administrator/components/com_@@COMPONENTNAME@@">
            ##ADMINCOMPONENTPACKAGEFILES##
        </files>

        <languages folder="administrator/language/">
            ##ADMINLANGUAGEFILES##
        </languages>
    </administration>

    <languages folder="language">
        ##FRONTENDLANGUAGEFILES##
    </languages>
    <media destination="com_@@COMPONENTNAME@@" folder="media/com_@@COMPONENTNAME@@">
        ##MEDIAPACKAGEFILES##
    </media>

    <install>
        <sql>
            <file charset="utf8" driver="mysql">sql/install.mysql.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">sql/uninstall.mysql.sql</file>
        </sql>
    </uninstall>

    <files folder="components/com_@@COMPONENTNAME@@">
        ##FRONTENDCOMPONENTPACKAGEFILES##
    </files>

    <updateservers>
        <server type="extension" priority="1" name="CNotes Updates"><![CDATA[ https://compojoom.com/index.php?option=com_ars&view=update&task=stream&format=xml&id=14&dummy=extension.xml]]></server>
    </updateservers>
</extension>
